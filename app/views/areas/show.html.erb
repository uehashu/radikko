<div>
  <h2><%= @area_name_kana %></h2>
  
  <table class="table table-hover">
    <thead>
      <tr>
	<td>station_id</td>
	<td>station_name</td>
	<td>station_name_ascii</td>
      </tr>
    </thead>

    <tbody>
      <% @stations.each do |station| %>
	<tr>
	  <td><%= station.area_id %></td>
	  <td><%= link_to station.station_name, station_path(station) %></td>
	  <td><%= station.station_name_ascii %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
